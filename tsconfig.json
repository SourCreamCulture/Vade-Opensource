{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "declaration": false,
    "strict": false,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "paths": {
    "@lib": ["lib/index.ts"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
