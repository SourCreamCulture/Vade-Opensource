{
  "compilerOptions": {
    /* Basic */
    "lib": [
      "ES2020"
    ],
    "target": "ES2020",
    "module": "CommonJS",
    "skipLibCheck": true,

    /* Compiling */
    "inlineSourceMap": false,
    "declaration": false,
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./dist",

    /* Strict Options */
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Types */
    "types": [
      "node"
    ],

    /* Module Resolution */
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}